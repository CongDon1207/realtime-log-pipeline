# Sample environment variables for realtime log analytics pipeline
# Copy this file to .env and customize values as needed

# Pulsar connection
PULSAR_URL=pulsar://pulsar:6650
PULSAR_ADMIN_URL=http://pulsar:8080
PULSAR_TOPIC=logs/nginx/access

# MinIO configuration
MINIO_ENDPOINT=http://minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=iceberg-data

# Flink job configuration
FLINK_JOB_NAME=nginx-log-analytics
FLINK_PARALLELISM=2

# Alert configuration
ALERT_EMAIL=alerts@example.com
SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
